<Page
    x:Class="Auth.WinUI3.Sample.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Auth.WinUI3.Sample"
    xmlns:fui="using:Firebase.Auth.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <fui:FirebaseUIControl>
            <fui:FirebaseUIControl.Header>
                <TextBlock 
                    HorizontalAlignment="Center"
                    Text="Welcome to FirebaseUI for WinUI3!"
                    Margin="24"
                    />
            </fui:FirebaseUIControl.Header>
            <fui:FirebaseUIControl.ErrorTextBlockStyle>
                <Style TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
                    <Setter Property="Foreground" Value="PaleVioletRed" />
                </Style>
            </fui:FirebaseUIControl.ErrorTextBlockStyle>
        </fui:FirebaseUIControl>

    </Grid>
</Page>
