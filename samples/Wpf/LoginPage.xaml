<Page x:Class="Firebase.Auth.Wpf.Sample.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Firebase.Auth.Wpf.Sample"
      xmlns:UI="clr-namespace:Firebase.Auth.UI;assembly=Firebase.Auth.UI.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <UI:FirebaseUIControl>
            <UI:FirebaseUIControl.Header>
                <StackPanel>
                    <Image 
                        Height="150"
                        Source="/Assets/firebase.png"
                        />

                    <TextBlock 
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Margin="12"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        Text="Don't forget to add your API Key & Domain in App.xaml.cs"
                        />
                </StackPanel>
            </UI:FirebaseUIControl.Header>
        </UI:FirebaseUIControl>
    </Grid>
</Page>
