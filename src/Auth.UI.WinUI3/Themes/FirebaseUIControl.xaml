<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Firebase.Auth.UI">

    <Style TargetType="local:FirebaseUIControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FirebaseUIControl">
                    <Grid 
                        x:Name="LoginControl"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

                        <Frame 
                            x:Name="Frame"
                            MaxWidth="400"
                            IsTabStop="False"
                            />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
